{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "types": [
        "@cloudflare/workers-types/2023-07-01"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "exclude": [
      "./out/**/*",
      "./coverage/**/*",
      "./coverage/**/**/*",
      "./coverage/**/**/**/*",
      "./node_modules/**/*",
      "./node_modules",
      "cypress/**/*.ts",
      "./web"
    ],
    "include": [
      "./worker"
    ]
  }
}
